   /*  $('a.more').bind('click', function () { 
        var txt = $('a.more').text(); 
        if (txt == '订单明细') { 
            $('#morediv').show(); 
            $('a.more').text('收起详情').addClass('top-arr').removeClass('bot-arr'); 
