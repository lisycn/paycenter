<meta name="description" content="注册公司找小微律政,小微律政拥有专业的律师和会计团队,小微律政专注为创业公司及中小微企业提供代办公司注册,商标注册,代理记账,社保公积金开户,公司变更,合同拟定,公司章程等一站式企业服务，小微律政服务流程每一步都无微不至。">
<meta name="keywords" content="小微律政公司介绍,小微律政怎么样" />
<link href="/css/style.css" type="text/css"  rel="stylesheet"/>
<link href="/css/box.css" type="text/css" rel="stylesheet"  >

<script type="text/javascript" src="/js/jquery.min.js"></script>
<script type="text/javascript" src="/js/jquery.progressbar.min.js"></script>
<script type="text/javascript" src="/js/city.js"></script>
<script type="text/javascript" src="/js/jquery.tabs.js"></script>
<script type="text/javascript" src="/js/box.js"></script> 
<script>
$(function(){
    // 城市切换
    $('#hhDrop00').hhDrop({});
    $('#hhDrop01').hhDrop({});  

    // 购买
    $(function(){
        $(".buy").click(function(){
          $('.view-box').animate({width:'show',opacity:'show'},100,function(){$('.view-box').show();});
              $('.open-btn').hide();
          $('.colse-btn').show();     
        });
        $(".open-btn").click(function(){
            $('.view-box').animate({width:'show',opacity:'show'},100,function(){$('.view-box').show();});
            $('.open-btn').hide();
            $('.colse-btn').show();             
        });
        $(".colse-btn").click(function(){
            $('.view-box').animate({width:'hide', opacity:'hide'},100,function(){$('.view-box').hide();});
            $('.open-btn').show();
            $('.colse-btn').hide(); 
        });
    });

    // 支付切换
    $("#normaltab").tabso({
        cntSelect:"#normalcon",
        tabEvent:"click",
        tabStyle:"normal"
    }); 

    // 印章选择
    $(function(){
        $(".z-cz li").each(function(){
            $(this).click(function(){
                $(".z-cz li").addClass("yz-type").removeClass("z-checked");
                $(this).addClass("z-checked").removeClass("yz-type");
            })
        });
    });

    // 下拉效果
    $('[name="n-select"]').click(function(e){
        $('[name="n-select"]').find('ul').hide();
        $(this).find('ul').show();
        e.stopPropagation();
    });
    $('[name="n-select"] li').hover(function(e){
        $(this).toggleClass('on');
        e.stopPropagation();
    });
    $('[name="n-select"] li').click(function(e){
        var val = $(this).text();
        var dataVal = $(this).attr("data-value");
        $(this).parents('[name="n-select"]').find('input').val(val);
        $('[name="n-select"] ul').hide();
        e.stopPropagation();
    });
    $(document).click(function(){
        $('[name="n-select"] ul').hide();
    });  

    // 右侧浮动层
    $(window).scroll(function(){
        var a=parseInt($(window).scrollTop());
        if(a<150){
            $(".r-named").removeClass("listxf")
        }
        if(a>150){
            $(".r-named").addClass("listxf")
        }
    });
});

/*商品数量+1*/
function numAdd(){
    var num_add = parseInt($("#quantity").val())+1;
    if($("#quantity").val()==""){
        num_add = 1;
    }
    $("#quantity").val(num_add);
}
/*商品数量-1*/
function numDec(){
    var num_dec = parseInt($("#quantity").val())-1;
    if(num_dec<1){
        //购买数量必须大于或等于1
        alert("购买数量至少为1");
    }else{
        $("#quantity").val(num_dec);
    }
}
</script>
</head>

<body>
<div class="user-center">


    <div class="rides-cs">
        
        <div class="floatR view-box" ><!-- 右侧支付层1 -->
            <div class="title-box">
                <span class="t1">支付中心</span>
                <span class="t2">购买<i>></i>支付<i>></i>服务</span>
            </div>
            <div class="pro-box">
                <div class="pro">
                    <span class="t1">商品名称</span>
                    <span class="t2">核准名称</span>
                </div>
                <div class="pro">
                    <span class="t1">商品价格</span>
                    <span class="t2">￥200</span>
                </div>
                <div class="pro">
                    <span class="t1">优惠</span>
                    <span class="t2">-￥100</span>
                </div>
            </div>
            <div class="pro-box">
                <div class="pro">
                    <span class="t1">应付金额</span>
                    <span class="t2 red">￥100</span>
                </div>
            </div>
            <div class="pay-style">
                <p class="title">请选择支付方式</p>
                <div class="pay-box">
                    <ul  id="normaltab">
                        <li class="current"><img src="images/user/online/pay_wx.png"></li>
                        <li><img src="images/user/online/pay_zfb.png"></li>                        
                    </ul>
                    <div id="normalcon">
                        <div class="sublist">
                            <p class="pay_wx"></p>
                        </div>
                        <div class="sublist">
                            <p class="pay_zfb"><a href="">支付</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

       

</div>
